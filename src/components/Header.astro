---
import SearchModal from './SearchModal';
import ThemeToggle from './ThemeToggle';
import MobileMenu from './MobileMenu';
import ClientMobileMenuWrapper from './ClientMobileMenuWrapper';
---

<header class="fixed top-0 left-0 right-0 z-40 bg-white/80 dark:bg-surface-900/80 backdrop-blur-md">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-20">
      <a href="/" class="text-2xl font-mono">DevFlow</a>
      
      <!-- Menú Desktop -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/blog" class="hover:text-blue-600 dark:hover:text-blue-400">Artículos</a>
        <a href="/tags" class="hover:text-blue-600 dark:hover:text-blue-400">Etiquetas</a>
        <a href="/resume" class="hover:text-blue-600 dark:hover:text-blue-400">Currículum</a>
        <SearchModal client:load />
        <ThemeToggle client:load />
      </div>

      <!-- Menú Móvil -->
      <div class="md:hidden">
        <ClientMobileMenuWrapper client:load />
      </div>
    </nav>
  </div>
</header>

<style>
  #mobile-menu {
    visibility: visible;
  }
</style>

<!-- Spacer para compensar el header fixed -->
<div class="h-20"></div>

