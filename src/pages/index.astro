---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { filterPublishedPosts } from '../utils/filterPosts';

const allPosts = await getCollection('blog');
const publishedPosts = filterPublishedPosts(allPosts);
const sortedPosts = publishedPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3); // Solo los 3 posts más recientes publicados
---

<Layout title="DevFlow - Desarrollo creativo">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="relative">
          <div class="absolute -top-20 left-0 w-64 h-64 bg-surface-100 dark:bg-surface-800/20 rounded-full 
                      filter blur-3xl opacity-60 animate-pulse"></div>
          <div class="absolute -top-10 right-0 w-72 h-72 bg-surface-200 dark:bg-surface-700/20 rounded-full 
                      filter blur-3xl opacity-60 animate-pulse delay-1000"></div>
          
          <div class="relative z-10 text-center space-y-8">
            <h1 class="text-7xl sm:text-8xl font-mono font-bold tracking-tight">
              <span class="text-surface-900 dark:text-white">Dev</span>
              <span class="text-surface-600 dark:text-surface-400">Flow</span>
            </h1>
            
            <p class="text-xl sm:text-2xl text-surface-600 dark:text-surface-300 max-w-2xl mx-auto leading-relaxed font-mono">
              Explorando el desarrollo web moderno a través de artículos, tutoriales y recursos cuidadosamente seleccionados.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
              <a 
                href="/blog" 
                class="inline-flex items-center justify-center px-8 py-4 text-lg font-mono
                       bg-surface-900 dark:bg-white text-white dark:text-surface-900
                       hover:bg-surface-800 dark:hover:bg-surface-100
                       transition-all duration-300 transform hover:-translate-y-1"
              >
                Explorar artículos
              </a>
              <a 
                href="#featured" 
                class="inline-flex items-center justify-center px-8 py-4 text-lg font-mono
                       border-2 border-surface-900 dark:border-white
                       text-surface-900 dark:text-white
                       hover:bg-surface-50 dark:hover:bg-surface-900
                       transition-all duration-300 transform hover:-translate-y-1"
              >
                Descubrir más
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Posts Section -->
  <section id="featured" class="py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center space-y-4 mb-16">
          <h2 class="text-4xl font-mono font-bold text-surface-900 dark:text-white">
            Artículos destacados
          </h2>
          <p class="text-surface-600 dark:text-surface-300 text-lg font-mono">
            Las últimas publicaciones del blog
          </p>
        </div>

        <div class="space-y-0">
          {sortedPosts.map((post) => (
            <article class="group py-8 first:pt-0 border-b border-surface-200 dark:border-surface-700/50 last:border-0">
              <a 
                href={`/blog/${post.slug}`} 
                class="block space-y-4 transition-all duration-300 hover:-translate-y-1"
              >
                <div class="flex flex-wrap items-center gap-3 text-sm">
                  <span 
                    class="px-3 py-1 text-xs font-medium font-mono rounded-full bg-surface-100/50 
                           dark:bg-surface-800/50 text-surface-900 dark:text-surface-300
                           transition-colors duration-300 group-hover:bg-surface-200/50 
                           dark:group-hover:bg-surface-700/50"
                  >
                    {post.data.category}
                  </span>
                  <time 
                    class="text-surface-500 dark:text-surface-400 font-mono"
                    datetime={post.data.publishDate.toISOString()}
                  >
                    {new Date(post.data.publishDate).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>

                <h3 
                  class="text-2xl font-bold font-mono text-surface-900 dark:text-surface-50 
                         group-hover:text-surface-600 dark:group-hover:text-surface-400 
                         transition-colors duration-300"
                >
                  {post.data.title}
                </h3>

                <p class="text-surface-600 dark:text-surface-300 leading-relaxed">
                  {post.data.description}
                </p>

                <div class="inline-flex items-center text-surface-600 dark:text-surface-400 font-medium pt-2">
                  <span class="text-sm font-mono">Leer más</span>
                  <svg 
                    class="w-4 h-4 ml-2 transform transition-transform duration-300 group-hover:translate-x-2" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </a>
            </article>
          ))}
        </div>

        <div class="text-center mt-12">
          <a 
            href="/blog" 
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-mono
                   border-2 border-surface-900 dark:border-white
                   text-surface-900 dark:text-white
                   hover:bg-surface-50 dark:hover:bg-surface-900
                   transition-all duration-300 transform hover:-translate-y-1"
          >
            Ver todos los artículos
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-32 bg-surface-50 dark:bg-surface-900/50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="relative">
          <div class="absolute inset-0 bg-surface-100 dark:bg-surface-800/50 transform skew-y-3"></div>
          <div class="relative bg-white dark:bg-surface-900 p-12 md:p-16">
            <div class="text-center space-y-6 max-w-2xl mx-auto">
              <h2 class="text-3xl font-mono font-bold text-surface-900 dark:text-white">
                Mantente actualizado
              </h2>
              <p class="text-surface-600 dark:text-surface-300 font-mono">
                Recibe las últimas actualizaciones y artículos directamente en tu correo.
              </p>
              <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
                <input 
                  type="email" 
                  placeholder="tu@email.com" 
                  class="flex-1 px-6 py-3 bg-surface-50 dark:bg-surface-800 
                         border-2 border-surface-200 dark:border-surface-700
                         focus:border-surface-600 dark:focus:border-surface-400 
                         outline-none transition-colors font-mono"
                />
                <button 
                  type="submit" 
                  class="px-8 py-3 bg-surface-900 dark:bg-white 
                         text-white dark:text-surface-900 font-mono
                         hover:bg-surface-800 dark:hover:bg-surface-100
                         transition-all duration-300 transform hover:-translate-y-1"
                >
                  Suscribirse
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

